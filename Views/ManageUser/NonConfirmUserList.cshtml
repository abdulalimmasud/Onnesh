@model IEnumerable<OnneshProject.Models.Users>

@{
    ViewBag.Title = "NonConfirmUserList";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
    string message = ViewBag.Success ?? "";
    string errorMessage = ViewBag.Error ?? "";
}
<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row" id="main">
            <div class="col-sm-12 col-md-12 well" id="content">
                <h1>Non Confirm Users!</h1>
            </div>
        </div>
    </div>
</div>
<div class="section">
    <div class="container">
        <div class="row">
            @if (message != "")
            {
                <div class="alert alert-success">
                    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                    <strong>@message</strong>
                </div>
            }
            else if (errorMessage != "")
            {
                <div class="alert alert-danger">
                    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                    <strong>@errorMessage</strong>
                </div>
            }
        </div>
        <div class="row">
            <div class="col-md-12">
                <table class="table table-hover table-striped">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Information</th>
                            <th>Contact</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>                        
                        @foreach (var item in Model)
                        {
                            if (item != null)
                            {
                                <tr>
                                    <td>
                                        <a href="#"><i class="-alt fa fa-2x fa-eye fa-fw"></i></a>
                                    </td>
                                    <td>
                                        <h4>
                                            <b>@item.Name</b>
                                        </h4>
                                        <p>@item.Address</p>
                                    </td>
                                    <td>
                                        <h4>
                                            <b>@item.Mobile</b>
                                        </h4>
                                        <a href="#">@item.Email</a>
                                    </td>
                                    <td>
                                        <div class="btn-group">
                                            <a href="@Url.Action("EditUser",new { id = item.Id})" class="btn btn-default" value="left">
                                                <i class="fa fa-fw s fa-pencil-square-o"></i>Edit
                                            </a>
                                            <a href="@Url.Action("DeleteNonConfirmUser", new { id = item.Id})" class="btn btn-default" value="center">
                                                <i class="fa fa-fw s fa-remove"></i>Delete
                                            </a>
                                            <a class="btn btn-default" value="right">
                                                <i class="fa fa-fw fa-cog"></i>Confirm
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                            else
                            {
                                <tr class="text-center">
                                    <td colspan="4">No Confrim Yet</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
