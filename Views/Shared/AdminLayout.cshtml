<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/CSS/Common/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/CSS/Common/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/CSS/Common/admin_layout.css" rel="stylesheet" />
    <script src="~/Scripts/Common/jquery-3.2.1.min.js"></script>
    <script src="~/Scripts/Common/bootstrap.min.js"></script>
</head>
<body>
    <div id="throbber" style="display:none; min-height:120px;"></div>
    <div id="noty-holder"></div>
    <div id="wrapper">
        <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                    <span class="sr-only">Onnesh</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="">
                    <img src="" alt="Logo Image" height="50px" width="75px" />
                </a>
            </div>
            <!-- Top Menu Items -->
            <ul class="nav navbar-right top-nav">
                <li>
                    <a href="" data-placement="bottom" data-toggle="tooltip" data-original-title="Stats">
                        <i class="fa fa-bar-chart-o"></i>
                    </a>
                </li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">@OnneshProject.Security.SessionPersister.Name<b class="fa fa-angle-down"></b></a>
                    <ul class="dropdown-menu">
                        <li><a href=""><i class="fa fa-fw fa-user"></i> Edit Profile</a></li>
                        <li><a href=""><i class="fa fa-fw fa-cog"></i> Change Password</a></li>
                        <li class="divider"></li>
                        <li><a href="@Url.Action("Logout","Account")"><i class="fa fa-fw fa-power-off"></i> Logout</a></li>
                    </ul>
                </li>
            </ul>
            <!-- Sidebar Menu Items - These collapse to the responsive navigation menu on small screens -->
            <div class="collapse navbar-collapse navbar-ex1-collapse">
                <ul class="nav navbar-nav side-nav">
                    @if (Convert.ToInt32(OnneshProject.Security.SessionPersister.AccountType) < 4)
                    {
                        <li>
                            <a href="#" data-toggle="collapse" data-target="#submenu-1"><i class="fa fa-fw fa-search"></i>Users<i class="fa fa-fw fa-angle-down pull-right"></i></a>
                            <ul id="submenu-1" class="collapse">
                                <li><a href=""><i class="fa fa-angle-double-right"></i>User 1</a></li>
                                <li><a href=""><i class="fa fa-angle-double-right"></i> User 2</a></li>
                                <li><a href=""><i class="fa fa-angle-double-right"></i> User 3</a></li>
                            </ul>
                        </li>
                        <li>
                            <a href="@Url.Action("AddAdmin","Accounts")"><i class="fa fa-fw fa-user-plus"></i>Register User</a>
                        </li>
                    }
                    @if (Convert.ToInt32(OnneshProject.Security.SessionPersister.AccountType) == 4)
                    {
                        <li>
                            <a href="#" data-toggle="collapse" data-target="#submenu-2"><i class="fa fa-fw fa-star"></i>Customers<i class="fa fa-fw fa-angle-down pull-right"></i></a>
                            <ul id="submenu-2" class="collapse">
                                <li><a href=""><i class="fa fa-angle-double-right"></i> Customer 1</a></li>
                                <li><a href=""><i class="fa fa-angle-double-right"></i> Customer 2</a></li>
                                <li><a href=""><i class="fa fa-angle-double-right"></i> Customer 3</a></li>
                            </ul>
                        </li>
                        <li>
                            <a href="@Url.Action("", "")"><i class="fa fa-fw fa-user-plus"></i></a>
                        </li>
                    }
                    <li>
                        <a href="sugerencias"><i class="fa fa-fw fa-paper-plane-o"></i>Contact</a>
                    </li>
                    <li>
                        <a href="faq"><i class="fa fa-fw fa fa-question-circle"></i>Help</a>
                    </li>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </nav>
        <div id="page-wrapper">
            <div class="container-fluid">
                @RenderBody()
            </div>
            <footer class="pull-right">
                <p>&copy; @DateTime.Now.Year - Onnesh.com</p>
            </footer>
        </div>
    </div>
    <script>
        $(function () {
            $('[data-toggle="tooltip"]').tooltip();
            $(".side-nav .collapse").on("hide.bs.collapse", function () {
                $(this).prev().find(".fa").eq(1).removeClass("fa-angle-right").addClass("fa-angle-down");
            });
            $('.side-nav .collapse').on("show.bs.collapse", function () {
                $(this).prev().find(".fa").eq(1).removeClass("fa-angle-down").addClass("fa-angle-right");
            });
        })
    </script>
</body>
</html>